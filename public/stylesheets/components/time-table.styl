.grid
  overflow hidden
  margin-left -20px
  margin-left -2.8vmin
  padding-left 0

.grid__item
  box-sizing border-box
  display inline-block
  width 100%
  padding-left 20px
  margin-left 0
  list-style none

.one-half
  width 50%

.one-quarter
  width 25%



.timesheet-graph
  box-sizing border-box
  width 100%
  margin 0 auto
  padding 0 7vmin

.timesheet-graph__header
  text-align center

.timesheet-graph__meta
  display block
  margin-bottom 20px
  margin-bottom 2.5vmin
  font-size 25px
  font-size 3.2vmin



.employee-list__header
  position relative
  height 4px
  margin 25px 0 50px 0
  margin 3.2vmin 0 6.4vmin 0
  border-color #fff
  border-style solid
  border-width 1px 1px 0 1px


.employee-list__title
  position absolute
  top -16px
  top -4.9vmin
  left 50%
  padding 0 10px
  padding 0 0.4vmin
  transform translate(-50%, 0)
  background-color #020202
  font-weight normal
  color #fff
  text-transform uppercase
  font-size 30px
  font-size 3.8vmin


.employee-list__content
  width 100%
  margin 0 auto


.employee__graph__label
  text-transform uppercase
  font-size 24px
  font-size 3vmin
  text-align center
  margin-bottom 12px
  margin-bottom 1.5vmin


.employee__graph__output
  background-image url('/images/employee__graph__output-bg.png')
  transform rotate(0.5turn) translate3d(0, 0, 0)
  margin-bottom 2px


.employee__avatar
  box-sizing border-box
  border 2px solid #fff
  position relative
  width 100%
  height 100%
  min-height 72px


.employee__initials
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  text-align center
  line-height 100%
  font-size 2em
  z-index 1

.employee__image
  position relative
  max-height 100%
  height auto
  z-index 2

